<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_livro"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titulo_livro"
        android:layout_width="241dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Titulo"
        app:layout_constraintStart_toEndOf="@+id/image_livro"
        app:layout_constraintTop_toBottomOf="@+id/isbn_livro" />

    <TextView
        android:id="@+id/autor_livro"
        android:layout_width="240dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Autor(a)"
        app:layout_constraintStart_toEndOf="@+id/image_livro"
        app:layout_constraintTop_toBottomOf="@+id/titulo_livro" />

    <TextView
        android:id="@+id/editora_livro"
        android:layout_width="241dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Editora"
        app:layout_constraintStart_toEndOf="@+id/image_livro"
        app:layout_constraintTop_toBottomOf="@+id/autor_livro" />

    <TextView
        android:id="@+id/desc_livro"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Descrição"
        app:layout_constraintStart_toEndOf="@+id/image_livro"
        app:layout_constraintTop_toBottomOf="@+id/editora_livro" />

    <TextView
        android:id="@+id/isbn_livro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="ISBN"
        app:layout_constraintStart_toEndOf="@+id/image_livro"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="10pt"
        android:background="?android:attr/listDivider"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="181dp" />


</androidx.constraintlayout.widget.ConstraintLayout>